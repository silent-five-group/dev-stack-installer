            "windows": "winget install --id Microsoft.VisualStudioCode --silent",
            "macos": "brew install --cask visual-studio-code",
            "linux": "sudo snap install code --classic || sudo apt-get install -y code || sudo dnf install -y code"
          }
        },
        {
          "id": "python",
          "name": "Python 3.12+",
          "description": "Python programming language",
          "check": "python --version || python3 --version",
          "install": {
            "windows": "winget install --id Python.Python.3.12 --silent",
            "macos": "brew install python@3.12",
            "linux": "sudo apt-get install -y python3.12 python3-pip || sudo dnf install -y python3.12 python3-pip"
          }
        },
        {
          "id": "nodejs",
