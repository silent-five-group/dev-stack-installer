            "windows": "winget install --id Docker.DockerDesktop --silent",
            "macos": "brew install --cask docker",
            "linux": "curl -fsSL https://get.docker.com | sh && sudo systemctl enable docker && sudo systemctl start docker"
          }
        },
        {
          "id": "vscode",
          "name": "Visual Studio Code",
          "description": "Code editor",
