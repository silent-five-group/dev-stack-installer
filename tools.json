        {
          "id": "git",
          "name": "Git",
          "description": "Version control system",
          "check": "git --version",
          "install": {
            "windows": "winget install --id Git.Git --silent",
            "macos": "brew install git",
            "linux": "sudo apt-get install -y git || sudo dnf install -y git || sudo yum install -y git"
          }
        },
        {
          "id": "gh",
